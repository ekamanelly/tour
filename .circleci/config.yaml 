version: 2.1
executors:
  node-image:
    docker:
      - image: cimg/node:13.8.0

  aws-cli-image:
    docker:
      - image: amazon/aws-cli

  ansible-image:
    docker:
      - image: python:3.7-alpine3.11
jobs:
  test-backend: 
    executor: node-image
    steps:
      - checkout
      - restore_cache:
          keys: [test-backend]
      - run:
          name: testing backend
          command: |
            cd backend
            npm install
            npm run test:coverage
      - save_cache:
          paths: [test-backend/node_modules]
          key: test-backend
workflows:
  default:
    jobs:
      - test-backend      